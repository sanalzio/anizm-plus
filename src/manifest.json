{
    "manifest_version": 2,
    "name": "Anizm+",
    "version": "1.5.3",
    "description": "Anzim sitesini konfor ve işlevsellik açısından iyileştirir.",



    "browser_specific_settings": {
        "gecko": {
            "id": "anizmplus_base@sanalzio.github.io",
            "strict_min_version": "89.0"
        },
        "gecko_android": {
            "strict_min_version": "113.0"
        }
    },



    "permissions": [

        "webRequest",
        "webRequestBlocking",
        "storage",


        "https://anizm.pro/*",
        "https://anizm.net/*",
        "https://anizle.com/*",
        "https://anizle.net/*",
        "https://puffytr.com/*",

        "https://cdn.jsdelivr.net/npm/devtools-detector/",

        "https://information-qot.com/code-process/*",

        "https://st.chatango.com/*",

        "https://youtube.googleapis.com/embed/*",
        "https://sistenn.uns.bio/*",
        "https://anizm.rpmvid.com/*",
        "https://video.sibnet.ru/shell.php?videoid=*",
        "https://optraco.top/explorer/*",
        "https://anizmplayer.com/*",
        "https://anizm.strp2p.com/*",
        "https://vidmoly.to/embed-*",
        "https://l455o.com/bkg/*"
    ],



    "web_accessible_resources": [
        "styles/*",
        "assets/*",
        "components/*",
        "inject_scripts/*",
        "replace_scripts/*"
    ],



    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },



    "browser_action": {
        "default_popup": "pages/popup.html",
        "default_icon": "assets/icon128.png"
    },



    "options_page": "pages/options.html",



    "content_scripts": [
        {
            "matches": [
                "https://anizm.pro/*",
                "https://anizm.net/*",
                "https://puffytr.com/*",
                "https://anizle.com/*",
                "https://anizle.net/*"
            ],
            "exclude_matches": [
                "https://anizm.pro/cdn-cgi/*",
                "https://anizm.net/cdn-cgi/*",
                "https://puffytr.com/cdn-cgi/*",
                "https://anizle.com/cdn-cgi/*",
                "https://anizle.net/cdn-cgi/*",

                "https://anizm.pro/ckeditor/*",
                "https://anizm.net/ckeditor/*",
                "https://puffytr.com/ckeditor/*",
                "https://anizle.com/ckeditor/*",
                "https://anizle.net/ckeditor/*",

                "https://anizm.pro/css/*",
                "https://anizm.net/css/*",
                "https://puffytr.com/css/*",
                "https://anizle.com/css/*",
                "https://anizle.net/css/*",

                "https://anizm.pro/images/*",
                "https://anizm.net/images/*",
                "https://puffytr.com/images/*",
                "https://anizle.com/images/*",
                "https://anizle.net/images/*",

                "https://anizm.pro/js/*",
                "https://anizm.net/js/*",
                "https://puffytr.com/js/*",
                "https://anizle.com/js/*",
                "https://anizle.net/js/*",

                "https://anizm.pro/semantic/*",
                "https://anizm.net/semantic/*",
                "https://puffytr.com/semantic/*",
                "https://anizle.com/semantic/*",
                "https://anizle.net/semantic/*",

                "https://anizm.pro/storage/*",
                "https://anizm.net/storage/*",
                "https://puffytr.com/storage/*",
                "https://anizle.com/storage/*",
                "https://anizle.net/storage/*",

                "https://anizm.pro/upload/*",
                "https://anizm.net/upload/*",
                "https://puffytr.com/upload/*",
                "https://anizle.com/upload/*",
                "https://anizle.net/upload/*",

                "https://anizm.pro/manifest.json",
                "https://anizm.net/manifest.json",
                "https://puffytr.com/manifest.json",
                "https://anizle.com/manifest.json",
                "https://anizle.net/manifest.json",

                "https://anizm.pro/manifest.json*",
                "https://anizm.net/manifest.json*",
                "https://puffytr.com/manifest.json*",
                "https://anizle.com/manifest.json*",
                "https://anizle.net/manifest.json*"
            ],
            "js": ["inject_scripts/document_start.js"],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://anizm.pro/*",
                "https://anizm.net/*",
                "https://puffytr.com/*",
                "https://anizle.com/*",
                "https://anizle.net/*"
            ],
            "exclude_matches": [
                "https://anizm.pro/cdn-cgi/*",
                "https://anizm.net/cdn-cgi/*",
                "https://puffytr.com/cdn-cgi/*",
                "https://anizle.com/cdn-cgi/*",
                "https://anizle.net/cdn-cgi/*",

                "https://anizm.pro/ckeditor/*",
                "https://anizm.net/ckeditor/*",
                "https://puffytr.com/ckeditor/*",
                "https://anizle.com/ckeditor/*",
                "https://anizle.net/ckeditor/*",

                "https://anizm.pro/css/*",
                "https://anizm.net/css/*",
                "https://puffytr.com/css/*",
                "https://anizle.com/css/*",
                "https://anizle.net/css/*",

                "https://anizm.pro/images/*",
                "https://anizm.net/images/*",
                "https://puffytr.com/images/*",
                "https://anizle.com/images/*",
                "https://anizle.net/images/*",

                "https://anizm.pro/js/*",
                "https://anizm.net/js/*",
                "https://puffytr.com/js/*",
                "https://anizle.com/js/*",
                "https://anizle.net/js/*",

                "https://anizm.pro/semantic/*",
                "https://anizm.net/semantic/*",
                "https://puffytr.com/semantic/*",
                "https://anizle.com/semantic/*",
                "https://anizle.net/semantic/*",

                "https://anizm.pro/storage/*",
                "https://anizm.net/storage/*",
                "https://puffytr.com/storage/*",
                "https://anizle.com/storage/*",
                "https://anizle.net/storage/*",

                "https://anizm.pro/upload/*",
                "https://anizm.net/upload/*",
                "https://puffytr.com/upload/*",
                "https://anizle.com/upload/*",
                "https://anizle.net/upload/*",

                "https://anizm.pro/manifest.json",
                "https://anizm.net/manifest.json",
                "https://puffytr.com/manifest.json",
                "https://anizle.com/manifest.json",
                "https://anizle.net/manifest.json",

                "https://anizm.pro/manifest.json*",
                "https://anizm.net/manifest.json*",
                "https://puffytr.com/manifest.json*",
                "https://anizle.com/manifest.json*",
                "https://anizle.net/manifest.json*"
            ],
            "js": ["inject_scripts/document_end.js", "inject_scripts/link_finder.js"],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://st.chatango.com/*"
            ],
            "all_frames": true,
            "js": ["inject_scripts/chat_window_inject.js"],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://youtube.googleapis.com/embed/*",
                "https://sistenn.uns.bio/*",
                "https://anizm.rpmvid.com/*",
                "https://video.sibnet.ru/shell.php?videoid=*",
                "https://optraco.top/explorer/*",
                "https://anizmplayer.com/*",
                "https://anizm.strp2p.com/*",
                "https://vidmoly.to/embed-*",
                "https://l455o.com/bkg/*"
            ],
            "all_frames": true,
            "js": ["inject_scripts/player_inject_css.js"],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://anizmplayer.com/*"
            ],
            "all_frames": true,
            "js": ["inject_scripts/aincrad_inject.js"],
            "run_at": "document_idle"
        }
    ],



    "icons": {
        "16": "./assets/icon16.png",
        "32": "./assets/icon32.png",
        "48": "./assets/icon48.png",
        "128": "./assets/icon128.png"
    }
}
