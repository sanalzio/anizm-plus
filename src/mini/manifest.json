{
    "manifest_version": 3,
    "name": "Anizm+ Mini",
    "version": "0.0.2",
    "description": "Anzim sitesini konfor ve işlevsellik açısından iyileştirir.",

    "browser_specific_settings": {
        "gecko": {
            "id": "anizmplus_mini@sanalzio.github.io",
            "strict_min_version": "89.0"
        },
        "gecko_android": {
            "strict_min_version": "113.0"
        }
    },

    "permissions": ["storage"],
    "host_permissions": [
        "https://anizm.pro/*",
        "https://anizm.net/*",
        "https://anizle.com/*",
        "https://anizle.net/*",
        "https://puffytr.com/*"
    ],

    "web_accessible_resources": [
        {
            "resources": ["styles/*", "assets/*", "inject_scripts/*"],
            "matches": [
                "https://anizm.pro/*",
                "https://anizm.net/*",
                "https://anizle.com/*",
                "https://anizle.net/*",
                "https://puffytr.com/*"
            ]
        }
    ],

    "action": {
        "default_popup": "pages/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "32": "assets/icon32.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },

    "options_page": "pages/options.html",

    "content_scripts": [
        {
            "matches": [
                "https://anizm.pro/*",
                "https://anizm.net/*",
                "https://anizle.com/*",
                "https://anizle.net/*",
                "https://puffytr.com/*"
            ],
            "js": ["inject_scripts/document_start.js"],
            "run_at": "document_start"
        },
        {
            "matches": [
                "https://anizm.pro/*",
                "https://anizm.net/*",
                "https://anizle.com/*",
                "https://anizle.net/*",
                "https://puffytr.com/*"
            ],
            "js": [
                "inject_scripts/document_end.js",
                "inject_scripts/link_finder.js"
            ],
            "run_at": "document_end"
        }
    ],

    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    }
}
